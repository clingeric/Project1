@{
    ViewBag.Title = "Contact Us";
}
<div style="text-align: center">
    <h2>@ViewBag.Title</h2>
</div>


<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">   
        <address>
            MissionConnections LLC<br />
            Provo, UT 84601<br />
            <abbr title="Phone">P:</abbr>
            (801) 555-5555
            <br />
            <abbr title="Email">E:</abbr>
            admin@missionconnections.com
            <br />
        </address>
        <form>
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" class="form-control" id="name">
            </div>
            <div class="form-group">
                <label for="email">Email address:</label>
                <input type="email" class="form-control" id="email">
            </div>
            <div class="form-group">
                <label for="subject">Select subject:</label>
                <select class="form-control" id="subject">
                    <option>Technical Problem/Bug</option>
                    <option>New Feature Request</option>
                    <option>Other</option>
                </select>
            </div>
            <div class="form-group">
                <label for="message">Message:</label>
                <textarea class="form-control" rows="5" id="message"></textarea>
            </div>
            @* submit button clears the text. Need to change it back to a type="submit" *@
            <button onclick="toastr.success('We\'ll get back to you as soon as we can!','Thanks for contacting us!')" type="reset" value="Clear" class="btn btn-default">Submit</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>